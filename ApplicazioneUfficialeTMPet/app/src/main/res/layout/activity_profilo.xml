<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity_profilo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/set_image_profilo"
                android:layout_width="match_parent"
                android:layout_height="286dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="46dp"
                android:src="@drawable/logoapppet"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <EditText
                android:id="@+id/editText_username_profilo"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="83dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="365dp"
                android:layout_marginEnd="91dp"
                android:layout_marginBottom="424dp"
                android:drawableStart="@drawable/ic_account_circle_black_24dp"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></EditText>


            <EditText
                android:id="@+id/editText_status_profilo"
                android:layout_width="320dp"
                android:layout_height="141dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="39dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="430dp"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="424dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/ic_takenote"
                android:hint="Status"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"></EditText>

            <Button
                android:id="@+id/button_update_profilo"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="101dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="590dp"
                android:layout_marginEnd="102dp"
                android:layout_marginBottom="424dp"
                android:background="@color/colorDarkGreenWhatsApp"
                android:padding="4dp"
                android:text="Update"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="35dp"></Button>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

