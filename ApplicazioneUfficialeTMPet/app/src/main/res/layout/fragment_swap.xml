<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Swap">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_swap"
        android:layout_width="match_parent"
        android:layout_height="469dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="0dp"
        android:overScrollMode="never"></androidx.viewpager.widget.ViewPager>

    <TextView
        android:id="@+id/button_visualizza_annuncio"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/viewPager_swap"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        android:text="VISUALIZZA ANNUNCIO"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/black">

    </TextView>


</RelativeLayout>