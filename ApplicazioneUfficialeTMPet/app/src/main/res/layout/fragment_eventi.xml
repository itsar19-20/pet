<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Eventi">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_fragment_eventi"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:foregroundGravity="center"
        android:overScrollMode="never"></androidx.viewpager.widget.ViewPager>

    <Button
        android:id="@+id/button_visualizza_evento"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/viewPager_fragment_eventi"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        android:text="VISUALIZZA EVENTO">

    </Button>


</RelativeLayout>