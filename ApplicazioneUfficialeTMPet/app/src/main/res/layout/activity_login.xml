<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_login"
    android:background="@color/colorMarroneApp"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgView_img_login"
                android:layout_width="match_parent"
                android:layout_height="504dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-36dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logoapppet" />

            <TextView
                android:id="@+id/editText_username_login"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="123dp"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="424dp"
                android:text="..."
                android:inputType="textPersonName"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/editText_user_name_login"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="107dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="254dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="424dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/ic_avatar_username"
                android:hint="Username"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"></EditText>

            <EditText
                android:id="@+id/editText_password_login"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="107dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="291dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="424dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"></EditText>

            <Button
                android:id="@+id/button_login_login"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="104dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="399dp"
                android:layout_marginEnd="99dp"
                android:layout_marginBottom="424dp"
                android:background="@color/colorVerdeApp"
                android:padding="4dp"
                android:text="Login"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="35dp"></Button>


            <TextView
                android:id="@+id/textView_password_dimenticata"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="601dp"
                android:layout_marginEnd="161dp"
                android:layout_marginBottom="424dp"
                android:background="@drawable/inputs"
                android:padding="4dp"
                android:text="Password dimenticata?"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/textView_registrazione"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="263dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="602dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="424dp"
                android:background="@drawable/inputs"
                android:padding="4dp"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"></TextView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>