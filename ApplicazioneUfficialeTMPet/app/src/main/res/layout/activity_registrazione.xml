<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_login"
    android:background="@color/black"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgView_img_registrazione"
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-36dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logoapppet" />

    <TextView
        android:id="@+id/editText_welcome_registrazione"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="424dp"
        android:text="..."
        android:inputType="textPersonName"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/editText_mail_registrazione"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="424dp"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/ic_mail_black_24dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"></EditText>

            <EditText
                android:id="@+id/editText_password_registrazione"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="107dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="291dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="424dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"></EditText>

            <Button
        android:id="@+id/button_registrazione_registrazione"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="399dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="424dp"
        android:background="@color/colorDarkGreenWhatsApp"
        android:padding="4dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="35dp"></Button>

    <TextView
        android:id="@+id/textView_already_have_account"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="458dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="424dp"
        android:background="@drawable/inputs"
        android:padding="4dp"
        android:text="Hai giÃ  un account?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"></TextView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>